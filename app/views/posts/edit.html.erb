<div class="row">
  <div class="col-md-4 col-centered text-center">
    <%= form_for @post do |f| %>
      <%= f.hidden_field :user_id, :value => session[:user_id] %> <br>
      <%= f.label :title %>
      <%= f.text_field :title %> <br>
      <%= f.label :content %>
      <%= f.text_area :content %> <br>
      <%= f.submit %>
    <% end %>
  </div>
</div>
